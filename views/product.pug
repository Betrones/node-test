	section.product.mt-4
		.container(style="background: #fff")
			nav(aria-label='breadcrumb')
				ol.breadcrumb
					li.breadcrumb-item
						a(href='/') Home
					li.breadcrumb-item
						a(href='#') Shirts
					li.breadcrumb-item.active(aria-current='page') Shirt

			.row
				.col-md-5.d-flex
					img(style="max-width: 100%; max-height: 100%;" src="https://cdn.discordapp.com/attachments/756099827649085482/836968959407947776/detail-3-gray.jpeg")
				.col-md-5.mx-auto.d-flex.flex-column
					h2.title.mb-3 Shirts
					.stats.mb-3.d-flex
						.pricing
							.price.d-flex
								h3 
									| 65$
									del.small.text-muted 90$
						.rating.d-flex
							.rating-mark here are 4 stars, ok?
							.rating-revievs 25 revievs

					p.text-muted= message
					.sizes
						.sizer.d-flex
							strong.size-title 
								|Size
								.small.text-muted (recuired)
