							option(value='1') L
							option(value='2') M
							option(value='3') S


					.type.mb-3
						.typer.d-flex
							strong.type-title
								|Title
								.small.text-muted (required)
						.form-check
							input#extraPrint.form-check-input(type='checkbox' value='extraPrintValue')
							label.form-check-label(for='extraPrint')
							| Принт
